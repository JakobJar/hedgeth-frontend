// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fund {
  address        String   @id @db.Char(42)
  name           String   @db.VarChar(128)
  description    String?
  manager        String   @db.Char(42)
  raisingClose   DateTime
  close          DateTime
  performanceFee Int      @db.SmallInt
  managementFee  Int      @db.SmallInt
  minInvestment  BigInt

  @@index([name], name: "fund_name")
  @@index([manager], name: "fund_manager")
  @@index([raisingClose], name: "fund_raisingClose")
  @@index([close], name: "fund_close")
}

model Token {
  address  String @id @db.Char(42)
  name     String @db.VarChar(128)
  symbol   String @db.VarChar(128)
  decimals Int    @db.SmallInt

  @@index([name], name: "token_name")
  @@index([symbol], name: "token_symbol")
}
